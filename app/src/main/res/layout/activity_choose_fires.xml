<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/blue0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:textColor="@color/grey3"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="请选择关卡"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_levels"
        android:background="@color/blue1"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>
    <TextView
        android:textColor="@color/grey3"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="请选择技能："
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_fires"
        android:background="@color/blue1"
        android:layout_margin="8dp"
        tools:itemCount="10"
        tools:listitem="@layout/item_fireicon"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cbWithPet"
        android:layout_width="130dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_start"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/btn_start"
        android:checked="true"
        android:textSize="12dp"
        android:text="携带宠物出战"
        android:textColor="#9E111111" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/gradient_round2"
        android:text="完 成"
        android:textColor="#E4E9EF"
        android:textSize="22dp"
        android:textStyle="bold" />

</RelativeLayout>
</LinearLayout>
