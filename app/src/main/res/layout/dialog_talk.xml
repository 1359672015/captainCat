<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/grey1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_talker"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/car_julian"
        android:layout_width="130dp"
        android:layout_height="180dp"/>

    <ScrollView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="大唐剑影大大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影大唐剑影"
        android:textSize="16dp" />
    </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_next"
        android:text="好的"
        android:textSize="15dp"
        android:background="@drawable/gradient3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_pass"
            android:textColor="@color/sky2"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过剧情>>" />
    </LinearLayout>
</LinearLayout>