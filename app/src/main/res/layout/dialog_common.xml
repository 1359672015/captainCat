<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="220dp"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    app:qmui_backgroundColor="@color/yellow4"
    app:qmui_borderColor="@color/blue1"
    app:qmui_borderWidth="6dp"
    app:qmui_radius="8dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/text4"
        android:text="提示文本框"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="提示文本框内容"
        android:textColor="@color/text4"
        android:textSize="12sp" />

    <com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout
        app:qmui_shadowAlpha="0.8"
        app:qmui_shadowElevation="9dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_cancel"
            android:layout_width="95dp"
            android:layout_height="36dp"
            app:qmui_radius="6dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text5"
            android:layout_marginRight="10dp"
            app:qmui_backgroundColor="@color/yellow5"
            app:qmui_borderColor="@color/green6"
            app:qmui_borderWidth="5dp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/btn_confirm"
            android:layout_width="95dp"
            android:layout_height="36dp"
            android:gravity="center"
            app:qmui_radius="6dp"
            android:text="确定"
            android:textColor="@color/text5"
            android:layout_marginLeft="10dp"
            app:qmui_borderColor="@color/white0"
            app:qmui_backgroundColor="@color/blue0"
            app:qmui_borderWidth="5dp" />
    </com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout>
</com.qmuiteam.qmui.widget.roundwidget.QMUIRoundLinearLayout>